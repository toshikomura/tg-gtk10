  language=Bash,
  basicstyle=\tiny,  
  backgroundcolor=\color{white},
  breaklines=true,
  captionpos=b,  
  commentstyle=\color{gray},  
  morekeywords={bundle, gem, rake, rails, new, generate, create, install, build, sudo},
  frame=single,
  keepspaces=true,
  numbers=left,
  numberstyle=\tiny\color{black},
  rulecolor=\color{black},
  showspaces=false,
  showstringspaces=false,
  showtabs=false,
  stepnumber=1,
  tabsize=1
}
